@page
@model Disaster_Alleviation.Areas.Identity.Pages.NewDonationModel

@{
    ViewData["Title"] = "Monetary Donations";
}

<header class="text-center"><h1><b>New Monetary Donations</b></h1></header>
<body style="background-image: linear-gradient(to right top, #d2b68c, #cfac77, #cba261, #c7984c, #c38e35, #cf832e, #dc762e, #e86633, #ff4c5b, #ff388b, #fd40c3, #d25ffb);">

    <section>
    <div class="text-center">
<h2>Monetary Donations Page</h2>
<div>
    <form method="post">
   
    <br />
    <b> Date </b>
    <br />
    <input type="date" name="moneydate" />
        <br />
        <br />
    <b>Amount</b>
    <br />
    <input type="text" name="moneyamount"  />
    <br />
    <br />
    Enter your full name, or if you wish to stay anonymous, write "Anonymous"<br />
    <input type="text"  name="anony">

        <br />
        <br />
    <input type="submit" value="save"/>

    </form>
</div>

    </div>
    </section>

    <h1><b>Monetary Donations</b></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Donator Name</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["MonetaryDonation"] != null)
            {
                foreach (var row in ViewData["MonetaryDonation"] as List<string[]>)
                {
                    <tr>
                        <td>@row[0]</td>
                        <td>@row[1]</td>
                        <td>@row[2]</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br />

   
</body>
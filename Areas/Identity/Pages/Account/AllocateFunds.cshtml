@page
@model Disaster_Alleviation.Areas.Identity.Pages.Account.AllocateFundsModel
@{

    ViewData["Title"] = "Allocate Funds";
}

<header class="text-center">
    <h1><b>Allocate Funds To Disaster</b1></h1>
</header>
<body style="background-image: linear-gradient(to right top, #d2b68c, #cfac77, #cba261, #c7984c, #c38e35, #cf832e, #dc762e, #e86633, #ff4c5b, #ff388b, #fd40c3, #d25ffb);">

    <section>
        <div class="text-center">
            <h2>Funds Allocation Page</h2>
            <div>
                <form method="post">
                    <br />
                    <b>Select Disaster</b>
                    <br />
                    <select name="disaster">
                        <option value="Earthquake">Earthquake</option>
                        <option value="Flood">Flood</option>
                        <option value="Wildfire">Wildfire</option>
                        <!-- Add more options for other disasters -->
                    </select>
                    <br />
                    <br />
                    <b>Money Available: R 315 000</b>
                    <br />
                    <b>How much do you wish to allocate?</b>
                    <br />
                    <input type="text" name="moneyamount" />
                    <br />
                  
                    
                    <br />
                    <input type="submit" value="Allocate" />
                </form>
            </div>
        </div>
    </section>
</body>
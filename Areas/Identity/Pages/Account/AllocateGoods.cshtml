@page
@model Disaster_Alleviation.Areas.Identity.Pages.Account.AllocateGoodsModel
@{
    ViewData["Title"] = "Allocate Goods";
}

<header class="text-center">
    <h1><b>Allocate Goods To Disaster</b></h1>
</header>
<body style="background-image: linear-gradient(to right top, #d2b68c, #cfac77, #cba261, #c7984c, #c38e35, #cf832e, #dc762e, #e86633, #ff4c5b, #ff388b, #fd40c3, #d25ffb);">

    <section>
        <div class="text-center">
            <h2>Goods Allocation Page</h2>

            <div class="text-center">
                <form method="post">
                    <b>Select Disaster</b>
                    <br />
                    <select name="disaster">
                        <option value="Earthquake">Earthquake</option>
                        <option value="Flood">Flood</option>
                        <option value="Wildfire">Wildfire</option>
                       
                    </select>
                    <br />
                    <br />
                    <b>Date</b>
                    <br />
                    <input type="date" name="goodsDate" />
                    <br />
                    <br />
                    <b>Number of items</b>
                    <br />
                    <input type="text" name="numItems" />
                    <br />
                    <br />
                    <b>Category Of Goods</b>
                    <br />
                    <select name="Category Of Goods">
                        <option value="Non-Perisahble Goods">Non-perishable Goods</option>
                        <option value="Flood">Flood</option>
                        <option value="Wildfire">Wildfire</option>
                        <!-- Add more options for other disasters -->
                    </select>
                    <br />
                    <input type="text" name="goodsCat" />
                    <br />
                    <br />
                    <b>Description</b>
                    <br />
                    <input type="text" name="description" />
                    <br />
                    

                    <br />
                    <input type="submit" value="Allocate" />
                </form>
            </div>
        </div>
    </section>
</body>

@page
@model Disaster_Alleviation.Areas.Identity.Pages.Account.Manage.ViewModel
@{

    ViewData["Title"] = "View Doonations";

}

<body style="background-image: linear-gradient(to right top, #d2b68c, #cfac77, #cba261, #c7984c, #c38e35, #cf832e, #dc762e, #e86633, #ff4c5b, #ff388b, #fd40c3, #d25ffb);">


    <h1><b>Monetary Donartions</b></h1>

    <div class="table">

        <thead>
            <tr>


                <th>MonDate</th>
                <th>MonAmount</th>
                <th>MonName</th>

            </tr>

        </thead>

        <tbody>

            @if (ViewData["MonetaryDonation"] != null)

                foreach (var row in ViewData["MonetaryDonation"] as List<string[]>)
                {
                
                    <tr>

                        <td>@row[0]</td>
                        <td>@row[1]</td>
                        <td>@row[2]</td>

                    </tr>
        
                
                }

        </tbody>


    </div>


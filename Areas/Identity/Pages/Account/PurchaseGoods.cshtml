@page
@model Disaster_Alleviation.Areas.Identity.Pages.Account.PurchaseGoodsModel
@{
    ViewData["Title"] = "Purchase Goods";
}

<header class="text-center">
    <h1><b>Purchase Goods</b1></h1>
</header>
<body style="background-image: linear-gradient(to right top, #d2b68c, #cfac77, #cba261, #c7984c, #c38e35, #cf832e, #dc762e, #e86633, #ff4c5b, #ff388b, #fd40c3, #d25ffb);">

    <section>
        <div class="text-center">
            <h2>Purchase Goods Page</h2>
            <div>
                <form method="post">
                   
                   
                    <br />
                    <b>Money Available: R 300000</b>
                    <br />
                    <br />
                    <br />
                    <b>Number of items</b>
                    <br />
                    <input type="text" name="numItems" />
                    <br />
                    <br />
                    <b>Category Of Goods</b>
                    <br />
                    <select name="disaster">
                        <option value="Clothes">Clothes</option>
                        <option value="Non-Perishable Goods">Non-Perishable Goods</option>
                        
                       
                    </select>
                    
                    <br />
                    <b>Description</b>
                    <br />
                    <input type="text" name="description" />
                    <br />
                    <br />
                    <b>Total cost of goods</b>
                    <br />
                    <input type="text" name="tcGoods" />
                    
                    <br/>

                    <br />
                    <input type="submit" value="Purchase" />
                </form>
            </div>
        </div>
    </section>
</body>

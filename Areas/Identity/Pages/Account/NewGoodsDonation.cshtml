@page
@model Disaster_Alleviation.Areas.Identity.Pages.NewGoodsDonationModel

@{
    ViewData["Title"] = "Goods Donation Page";
}

<header class="text-center"><h1><b>Donate Goods</b></h1></header>
<section>
<body style="background-image: linear-gradient(to right top, #d2b68c, #cfac77, #cba261, #c7984c, #c38e35, #cf832e, #dc762e, #e86633, #ff4c5b, #ff388b, #fd40c3, #d25ffb);">

<h2>Donate Goods</h2>
   
    <div class="text-center">

    <form method="post">

    <br />
    <b> Date </b>
    <br />
    <input type="date" name="goodsDate" />
    <br />
    <br />
    <b>Number of items</b>
    <br />
    <input type="text" name="numItems" />
    <br />
    <br />
    <b>Category Of Goods</b>
    <br />
        Please write "Clothes" or "Non-perishable foods"
        <br />
    <input type="text" name="goodsCat"/>
   
        
    <br />
    <br />
        <b>Description</b>
        <br />
        <input type="text" name="description"/>
        <br />
        <br />

        <b>New Category</b> 
        <br />
        <input type="text" name="newCat" />
        <br />
        <br />

    <input type="submit" value="save"/>

    </form>
</div>

    </body>
    <br />

    <h1><b>Goods Donations</b></h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>No Of Items</th>
                <th>Category</th>
                <th>Description</th>
                <th>New Category</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["GoodsDonation"] != null)
            {
                foreach (var row in ViewData["GoodsDonation"] as List<string[]>)
                {
                    <tr>
                        <td>@row[0]</td>
                        <td>@row[1]</td>
                        <td>@row[2]</td>
                        <td>@row[3]</td>
                        <td>@row[4]</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</section>
